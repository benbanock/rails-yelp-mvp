<h1> <%=@restaurant.name%></h1>
<p><%= @restaurant.address%> <%= @restaurant.category %> <%= @restaurant.phone_number%> </p>
<%=link_to restaurants_path do %>
  <i class="fas fa-home"></i>
<% end %>
<%# create simple form for to create a review for @restaurant  %>
<%# simple_form_for (@restaurant, @review) do %>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
