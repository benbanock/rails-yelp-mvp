<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number, placeholder: "set a number"%>
  <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Select a category"%>

  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
